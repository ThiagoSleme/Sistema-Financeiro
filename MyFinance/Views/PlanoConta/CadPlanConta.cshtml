@model PlanoContasModel
@{
    ViewData["Title"] = "CadPlanConta";
}

<h2>CadPlanConta</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="PlanoCota" asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="Descracao" class="control-label"></label>
                <input asp-for="Descracao" class="form-control" />
                <span asp-validation-for="Descracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>