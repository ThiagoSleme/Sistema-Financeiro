@model UsuarioModel
@{ Layout = "../Shared/_Layout_Login.cshtml";}


<div class="container " style="background-color:rgba(239, 239, 239, 0.95); border-radius:10px; width:300px; padding:20px;">
    @{
        try
        {
            if (TempData["MenssagemLoginInvalido"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Atenção!</strong> @TempData["MenssagemLoginInvalido"]
                </div>
            }
        }
        catch (Exception)
        {

            throw;
        }
    }
    <form asp-controller="Usuario" asp-action="ValidarLogin">
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" class="form-control" asp-for="Email" required>
        </div>
        <div class="form-group">
            <label for="pwd">Senha:</label>
            <input type="password" class="form-control" asp-for="Senha" required>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox"> Lembrar meu acesso
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Efetuar Login</button>
        <button type="button" class="btn btn-success" onclick="CadastrarUsuario()">Realizar Cadastro</button>
    </form>
</div>
<script>
    function CadastrarUsuario() {
        window.location.href = '../Usuario/Cadastrar';
    }
</script>
